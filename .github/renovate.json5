{
    extends: [
        "github>kronostechnologies/standards:renovate-base"
    ],

    rebaseWhen: "conflicted",

    js: {
        packageRules: [
            {
                matchUpdateTypes: ["major", "minor", "patch"],
                automerge: false,
            },
            {
                matchUpdateTypes: ["minor"],
                excludePackageNames: [""],
                groupName: "Yarn minors",
            },
            {
                matchUpdateTypes: ["patch"],
                excludePackageNames: [""],
                groupName: "Yarn patches",
            },
        ],
    },
}
